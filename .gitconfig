[alias]
  ci = commit -a
  co = checkout
  st = status
  pum = pull origin master
  
[color]
  ui = auto

[user]
  name = muflax
  email = mail@muflax.com

[push]
  default = matching
  
[github]
  user = muflax

[core]
	excludesfile = .gitignore-global

[include]
   path = .git-local

[merge]
  tool = meld3
  conflictsytle = diff3

[mergetool "meld3"]
  cmd = /usr/bin/meld $LOCAL $BASE $REMOTE $MERGED
  
[gui]
	encoding = utf-8
	spellingdictionary = none
