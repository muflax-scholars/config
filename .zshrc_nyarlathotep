alias unison="unison -log=false -auto"
alias un='unison kira -times; unison kira-anki -times'
alias ur='unison kira-repo'
alias ud='sudo unison kira-portage -auto -log=false -prefer newer -times'


function up() {
    ur
    sudo rsync -avP rsync://azathoth/gentoo-config /etc/portage
    rsync -avP --delete rsync://azathoth/gentoo-layman /var/lib/layman/
    ud
    sudo emerge --sync
    eix-update
}
