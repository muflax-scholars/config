# saner titles
set statusbar-basename false
set window-title-basename true
set statusbar-original-path true
set window-title-original-path true

# navigation
map \< goto top
map \> goto bottom
map <C-a> scroll full-left
map <C-e> scroll full-right
set scroll-step 80
map g scroll up
map r scroll down
map n scroll left
map t scroll right

# zoom
map <C-+> zoom in
map <C-Up> zoom in
map <C--> zoom out
map <C-Down> zoom out

# fit
set adjust-open best-fit

map <C-1> adjust_window best-fit
map <C-2> adjust_window width
map <F1> set "pages-per-row 1"
map <F2> set "pages-per-row 2"

# emacs-y keys
map <C-g> abort
